{
  "compilerOptions": {
      "declaration": false,
      "module": "commonjs",
      "target": "ES2020",
      "noImplicitAny": false,
      "sourceMap": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": false,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@common/*": [
          "../common/src/*"
        ]
      },
      "types": ["node"]
  },
  "include": [
      "src/**/*.ts",
      "../common/src/**/*.ts"
  ]
}
